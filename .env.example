# =============================================================================
# Last of Snack â€“ environment example
# =============================================================================
# Copy to .env and set values. Used by:
#   - docker compose (variable substitution in docker-compose.prod.yml)
#   - Optional: pass to services via env_file in docker-compose
# =============================================================================

# -----------------------------------------------------------------------------
# Traefik (required for docker-compose.prod.yml)
# -----------------------------------------------------------------------------
TRAEFIK_STACK_ENV=prod
TRAEFIK_LASTOFSNACK_NAME=lastofsnack
TRAEFIK_LASTOFSNACK_PORT=80
TRAEFIK_LASTOFSNACK_URL=snack.yourdomain.com

# -----------------------------------------------------------------------------
# Game server (optional; docker-compose.yml sets these inline)
# -----------------------------------------------------------------------------
# NODE_ENV=production
# PORT=4000
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost
# TURN_TIMEOUT_SEC=20
# SPEED_MODE=false

# -----------------------------------------------------------------------------
# Frontend (optional; leave NEXT_PUBLIC_GAME_SERVER_HTTP empty when behind nginx/Traefik so the app uses same-origin)
# -----------------------------------------------------------------------------
# NODE_ENV=production
# NEXT_PUBLIC_GAME_SERVER_HTTP=
# GAME_SERVER_HTTP=
# NEXT_PUBLIC_SITE_URL=https://snack.yourdomain.com
